

<h2>Admnin Area</h2>

<h4><%= flash[:notice] %></h4>
<%= form_with do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "Login"%>
  </div>
<% end %>
